{% extends 'base.html.twig' %}

{% block title %}Gallery{% endblock %}

{% block body %}
    <h1>Gallery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gallery.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ gallery.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gallery.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ gallery.createdAt ? gallery.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ gallery.updatedAt ? gallery.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PublishAt</th>
                <td>{{ gallery.publishAt ? gallery.publishAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {{form_start(form)}}
        {{form_rest(form)}}
        <button type="submit">Ajouter une image</button>
    {{form_end(form)}}

    <a href="{{ path('gallery_index') }}">back to list</a>

    <a href="{{ path('gallery_edit', {'slug': gallery.slug}) }}">edit</a>

    {{ include('gallery/_delete_form.html.twig') }}
{% endblock %}
